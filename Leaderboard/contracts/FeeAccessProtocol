pragma solidity ^0.8.19;

import "./FeeVault.sol";

contract FeeAccessProtocol {
    address payable public feeVaultAddress;  // Alterado para address payable
    uint256 public feeAmount;

    constructor(address payable _feeVaultAddress, uint256 _feeAmount) {
        feeVaultAddress = _feeVaultAddress;
        feeAmount = _feeAmount;
    }

    function getFeeVaultBalance() external view returns (uint256) {
        FeeVault feeVault = FeeVault(feeVaultAddress);
        return feeVault.balance();
    }
}

